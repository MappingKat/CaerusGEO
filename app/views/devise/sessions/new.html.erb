<style>
.navbar { display:none;}
body{ background-color: #fff !important;}
#header-sub {display:none };

#home-right a {display:none;}
a.prev, a.next {display:none;}
.pagination {display:none;}
.border {border-bottom:thin solid black;}
h2 {line-height: 28px;margin-bottom:20px;}
.main {padding:40px 0px;}

#white_strip .container {display:none;}
</style>
<div class="container main ">
	<div class="span12" style="margin-left: 0px;width:990px">
		<%= link_to image_tag('CAGEO_logo_sml.png',:class => "pull-left" ,:style => ""),'/' %>
	</div>
</div>


<div class="container">
	<div class="span6 offset1" >
		<h3>Already have an account?<br>Sign in below.</h3>
		<div class="clear"></div>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="inputs">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		  </div>
	
		  <div class="actions">
		    <%= f.button :submit, "Log in",:class => "btn-large" %>
		  </div>
		<% end %>
		<div class="well" style="width:60%">
			<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  			<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
			<% end -%>

			<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  			<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
			<% end -%>
		</div>
	</div>


	<div class="span5">
		<h3 style="margin-bottom:20px;">Don't have an account yet?</h3>
		<p style="margin-bottom:20px;">CaerusGEO allows you to print multipage paper atlases of anywhere in the world and collect, document and visualize data of incidents, land use or social perception. Then through several easy steps the software automatically generates files that merges data details with geographic data.</p>
		<%= link_to "Sign up for a free account.",new_user_registration_path, :class =>"btn btn-large" %>
	</div>
</div>